<div class="form-group row">
	<div class="col-sm-2 col-form-label">
		<%= f.label :name %>
	</div>
	<div class="col-sm-10">
		<%= f.text_field :name, :placeholder => "Name (maximum 40 characters)", class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<%= f.label :content %>
	<%= f.cktext_area :content, :placeholder => "Content" %>
</div>
<div class="form-group">
	<%= f.label :materials %>
	<%= f.text_field :materials, :placeholder => "Materials" %>
</div>
<div class="form-group">
	<%= f.label :subject %>
	<%= f.collection_select :subject_id, Subject.order(:id), :id, :topic %>
</div>