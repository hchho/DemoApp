<div class="signup_form">
<h2 class="text-center">Sign up</h2>
	<%= form_for(@user) do |f| %>
	<div class="form-group">
		<div class="col-sm-2 col-form-label">
			<%= f.label :name %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :name, :placeholder => "name" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 col-form-label">
			<%= f.label :email %>
		</div>
		<div class="col-sm-10">
			<%= f.email_field :email, :placeholder => "email@email.com" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 col-form-label">
			<%= f.label :password %>
		</div>
		<div class="col-sm-10">
			<%= f.password_field  :password, :placeholder => "Password must be at least 6 characters long" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2 col-form-label">
			<%= f.label :password_confirmation, "Confirmation" %>
		</div>
		<div class="col-sm-10">
			<%= f.password_field :password_confirmation, :placeholder => "Re-type password" %>
		</div>
	</div>
	<div class="col-sm-offset-2">
	<%= f.submit "Create an account", class: "btn btn-primary" %>
	</div>
	<% end %>
</div>